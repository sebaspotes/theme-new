{%- style -%}

.{{ section.id }}{
    width: 100%;
    position: relative;
}

.img-{{ section.id }}{
    width: 100%;
    height: auto;
    display: block;
}

.title-{{ section.id }}{
    position: absolute;
    bottom: 20px;
    color: black;
    font-size: 28px;
    text-align: left;
    padding: 10px 20px;
}

{%- endstyle -%}

<div class="{{ section.id }}">
    <img class="img-{{ section.id }}" src="{{ section.settings.image | img_url: '1920x'}}" alt="Imagen de banner" />
  <h1 class="title-{{ section.id }}">{{ section.settings.title }}</h1>
</div>


{% schema %}

    {
        "name": "Banner",
        "class": "main-banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Imagen"
            },
            {
                "type": "text",
                "id": "title",
                "default": "Title",
                "label": "Heading"
            }
    ]   
    }
    {% endschema %}