{%- style -%}

.{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin: 30px;
    width: 100%;
}

.containertext-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
    padding: 60px;
    
}

.img-{{ section.id }} {
    width: 100%
}


{%- endstyle -%}





<div class="{{ section.id }}">
    <img class="img-{{ section.id }}" src="{{ section.settings.image | img_url: 'master'}}" alt="{{ section.settings.title }}" />
    <div class="containertext-{{ section.id }}">
        <h1 class="heading-{{ section.id }}">{{ section.settings.title }}</h1>
        <div class="parrafo-{{ section.id }}">{{ section.settings.text }} </div>
    </div>

</div>

{% schema %}

{
    "name": "Imagen con texto",
    "class": "img-text",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Title",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "text",
            "default": "<p>Write your description here</p>",
            "label": "Contenido Texto"
        }
]   
}
{% endschema %}